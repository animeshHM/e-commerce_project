<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Clothing</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>

<body style="background-color:#551606">
    {{ pimcore_snippet("header") }}
    <!-- Carousel -->
		<div
			id="demo" class="carousel slide" data-bs-ride="carousel">

			<!-- Indicators/dots -->
			<div class="carousel-indicators">
				<button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
				<button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
				<button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>

			</div>

			<!-- The slideshow/carousel -->
			<div class="carousel-inner">
				<div class="carousel-item active">
					<img src="HomeImgs/clothImg1.png" alt="" class="d-block" style="width:100%">
				</div>
				<div class="carousel-item">
					<img src="HomeImgs/clothImg2.png" alt="" class="d-block" style="width:100%">
				</div>
				<div class="carousel-item">
					<img src="HomeImgs/clothImg3.png" alt="" class="d-block" style="width:100%">
				</div>
			</div>

			<!-- Left and right controls/icons -->
			<button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
				<span class="carousel-control-prev-icon"></span>
			</button>
			<button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
				<span class="carousel-control-next-icon"></span>
			</button>
        </div>
		<br>
    <div class="container">
        <br>
        <div>
        <a href="clothing" class="btn btn-dark btn-md active" role="button" aria-pressed="true">All</a>
        <a href="topWear" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Top Wear</a>
        <a href="bottomWear" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Bottom Wear</a>
        <a href="ethnicWear" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Ethnic Wear</a>
        <a href="menClothing" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Men</a>
        <a href="womenClothing" class="btn btn-secondary btn-md active" role="button" aria-pressed="true">Women</a>
        </div>
        <br>
        <div class="row row-cols-3 row-cols-md-3 g-4">
            {% for object in object %}
            <div class="col">
                <div class="card h-100">
                    <img src="{{ object.getProductImage }}" class="card-img-top" alt="..." height="500px" width="80px";>
                    <div class="card-body">
                        <h3 class="card-title">Product Name : {{ object.getProductName }}</h3>
                        <h5 class="card-text">Description : {{ object.getDescription }}</h5>
                        <h5 class="card-text" style="color:green;">Price : {{ object.getPrice }}</h5>
                        {% if object.getClothingType=='TopWear' %}
                            <p class="card-text">Size : {{ object.getClothingItem.getTopWear.getSize }}</p>
                            <p class="card-text">Fabric : {{ object.getClothingItem.getTopWear.getFabric }}</p>
                            <p class="card-text">Fit : {{ object.getClothingItem.getTopWear.getFit }}</p>
                            <p class="card-text">Pattern : {{ object.getClothingItem.getTopWear.getPattern }}</p>
                            <p class="card-text">Occasion : {{ object.getClothingItem.getTopWear.getOccasion }}</p>
                        {% elseif object.getClothingType=='BottomWear' %}
                            <p class="card-text">Size : {{ object.getClothingItem.getBottomWear.getSize }}</p>
                            <p class="card-text">Fabric : {{ object.getClothingItem.getBottomWear.getFabric }}</p>
                            <p class="card-text">Fit : {{ object.getClothingItem.getBottomWear.getFit }}</p>
                            <p class="card-text">Pattern : {{ object.getClothingItem.getBottomWear.getPattern }}</p>
                            <p class="card-text">Occasion : {{ object.getClothingItem.getBottomWear.getOccasion }}</p>
                        {% elseif object.getClothingType=='EthnicWear' %}
                            <p class="card-text">Fabric : {{ object.getClothingItem.getEthnicWear.getFabric }}</p>
                            <p class="card-text">Pattern : {{ object.getClothingItem.getEthnicWear.getPattern }}</p>
                        {% endif %}
                    </div>
                    <button type="button" class="btn btn-outline-success">Add to Cart</button>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {{ pimcore_snippet("footer") }}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>